<RelativeLayout 
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/gray_bg">
    
    <include 
        android:id="@+id/l_top"
        layout="@layout/top_title"/>

	    <LinearLayout 
	        android:layout_below="@id/l_top"
	        android:layout_width="fill_parent"
	        android:layout_height="wrap_content"
	        android:padding="10dp"	        
	        android:orientation="vertical">
	        <TextView 
	            android:layout_width="wrap_content"
	            android:layout_height="wrap_content"
	            android:textSize="@dimen/content"
	            android:textColor="@color/navy"
	            android:text="车辆名称"/>
	        <EditText
	            android:id="@+id/et_nick_name"
			    android:layout_width="fill_parent"
			    android:layout_height="wrap_content"
			    android:textSize="@dimen/content"
			    android:layout_marginTop="10dp"
			    android:padding="10dp"   
			    android:maxLength="11"
			    android:background="@drawable/ico_et_back"
			    android:textColor="@color/navy"
			    android:hint="必填"/>
	        <TextView 
	            android:layout_width="wrap_content"
	            android:layout_height="wrap_content"
	            android:textSize="@dimen/content"
			    android:layout_marginTop="10dp"
			    android:textColor="@color/navy"
	            android:text="车牌号"/>
	        <LinearLayout 
	            android:layout_width="fill_parent"
	            android:layout_height="wrap_content"
	            android:layout_marginTop="10dp"
				android:padding="10dp"   
	            android:background="@drawable/ico_et_back"
	            android:orientation="horizontal">
	            <LinearLayout 
	                android:id="@+id/btn_choose"
	                android:layout_width="wrap_content"
	                android:layout_height="wrap_content"
	                android:orientation="horizontal">
	                <TextView
	                    android:id="@+id/tv_car_province"
	                    android:layout_width="wrap_content"
	                    android:layout_height="match_parent"
	                    android:gravity="center"
	                    android:text="粤"
	                    android:paddingLeft="5dp"
	                    android:paddingRight="5dp"
	                    android:textColor="@color/navy"
	                    android:textSize="@dimen/content" />	
	                <ImageButton
	                    android:layout_width="wrap_content"
	                    android:layout_height="match_parent"
	                    android:adjustViewBounds="true"
	                    android:background="@null"
	                    android:scaleType="fitCenter"
						android:inputType="textEmailAddress"
	                    android:src="@drawable/body_icon_pulldown" />
	            </LinearLayout>	            
		        <EditText
		            android:id="@+id/et_obj_name"
				    android:layout_width="fill_parent"
				    android:layout_height="wrap_content"
				    android:textSize="@dimen/content"
				    android:background="@null"
				    android:layout_marginLeft="5dp"
				    android:textColor="@color/navy"
				    android:inputType="textEmailAddress"
				    android:hint="选填"/>
	        </LinearLayout>
	        <LinearLayout 
	            android:layout_width="fill_parent"
	            android:layout_height="fill_parent"
	            android:orientation="horizontal"
				android:layout_marginTop="10dp"
				android:padding="10dp"
				android:background="@drawable/ico_et_back">	            
			    <TextView 
		            android:layout_width="wrap_content"
		            android:layout_height="wrap_content"
		            android:textSize="@dimen/content"
				    android:textColor="@color/navy"
				    android:layout_marginLeft="5dp"
		            android:text="车型:"/>
			    <TextView 
			        android:id="@+id/tv_car_models"
			        android:layout_marginLeft="5dp"
			        android:layout_marginRight="10dp"
		            android:layout_width="fill_parent"
		            android:layout_height="wrap_content"
		            android:hint="必填"
		            android:textSize="@dimen/content"
		            android:textColor="@color/navy"/>
	        </LinearLayout>
	    </LinearLayout>

	    <TextView
	        android:id="@+id/tv_finish"
	        android:layout_width="wrap_content"
	        android:paddingLeft="15dp"
	        android:paddingRight="15dp"
	        android:layout_height="50dp"
	        android:gravity="center_vertical"
	        android:layout_alignParentRight="true"
	        android:background="@drawable/tv_selector"
	        android:textColor="@color/white"
	        android:text="完成" />

</RelativeLayout>
